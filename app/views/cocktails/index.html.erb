<div class="container">
  <div class="mt-3 p-4">
    <h1>Cocktails List</h1>
    <p><%= link_to "Create Cocktail", new_cocktail_path, class: "btn btn-secondary" %></p>
    <ul>
      <% @cocktails.each do |cocktail| %>
        <li><%= link_to cocktail.name, cocktail_path(cocktail) %></li>
      <% end %>
    </ul>
  </div>
</div>