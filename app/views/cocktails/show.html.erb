<div class="container">
  <div class="mt-3 p-4">
    <h1>Your drink: <strong><%= @cocktail.name %></strong></h1>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li>
          <%= dose.description %> <%= dose.ingredient.name %> 
          <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-outline-warning btn-sm' %>
        </li>
      <% end %>
    </ul>

    <p><%= link_to 'Back to Cocktails', cocktails_path, class: 'btn btn-outline-secondary'  %></p>

    <p><%= link_to 'Add a dose to your drink', new_cocktail_dose_path(@cocktail)  %></p>
  </div>
</div>
