<%= render "shared/navbar" %>
<body class="show-body">
  <div class="container d-flex justify-content-center">
    <div class="glass-card-white w-75 mt-3 p-4">
      <h1 class="drink-name"><i class="fas fa-cocktail"></i><strong><%= @cocktail.name %></strong></h1>
      <div class="mt-3 mb-3 d-flex justify-content-center"><%= cl_image_tag(@cocktail.photo.key, class: "drink-image") %></div>
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li>
            <%= dose.description %> <%= dose.ingredient.name %>
            <%= link_to dose_path(dose), method: :delete, data: { confirm: 'Are you sure you want to delete this dose?'} do %>
              <i class="fa fa-trash" aria-hidden="true"></i>
            <% end %>
          </li>
        <% end %>
      </ul>
      <div class="d-flex justify-content-center">
        <p><%= link_to 'Back to Cocktails', cocktails_path, class: 'btn btn-outline-secondary back-btn mr-3'  %></p>
        <p><%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail), class: 'btn btn-primary create-btn' %></p>
      </div>
    </div>
  </div>
</body>
<%= render "shared/footer" %>
