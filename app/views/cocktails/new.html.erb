<body class="new-cocktail-body">
  <div class="container">
    <div class="mt-3 p-4">
      <%= simple_form_for(@cocktail) do |f| %>
        <div class="cocktail-name-label"><p><%= f.input :name, label: "Cocktail Name" %></p></div>
        <%= f.submit %>
      <% end %>
    </div>
  </div>

  <div class="see-all-links"><%= link_to 'See all cocktails', cocktails_path(@cocktail) %></div>
</body>